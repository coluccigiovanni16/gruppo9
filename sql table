create table teacher
(
    name     TEXT,
    lastname TEXT,
    id       NUMERIC,
    PRIMARY KEY (id)
);

create table student
(
    name     TEXT,
    lastname TEXT,
    id       NUMERIC,
    PRIMARY KEY (id)
);
create table event
(
    name        TEXT,
    teacherid   NUMERIC,
    date        TEXT,
    type        TEXT,
    description TEXT,
    PRIMARY KEY (name, teacherid),
    FOREIGN KEY (teacherid) references teacher (id)
    on update cascade
    on delete cascade
);

create table partecipant
(
    studentid NUMERIC,
    eventid   TEXT,
    teacherid NUMERIC,
    confirmed BOOLEAN,
    PRIMARY KEY (studentid, eventid, teacherid),
    FOREIGN KEY (studentid) references student (id)
    on update cascade
        on delete cascade,
    FOREIGN KEY (teacherid, eventid) references event (teacherid, name)
    on update cascade
        on delete cascade


);



